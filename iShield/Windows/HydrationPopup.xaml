<Window x:Class="iShield.Windows.HydrationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iShield.Windows"
        mc:Ignorable="d"
        Title="HydrationPopup" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Get Hydrated!" FontSize="25"/>
            <Button Content="Ok" Width="100" Padding="5" Margin="0,10,0,0" FontSize="16" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
